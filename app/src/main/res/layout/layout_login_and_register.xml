<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginAndRegister"
    android:background="#CBE8CA">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profile"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:visibility="visible"
        app:civ_border_color="#2CBCA3"
        app:civ_border_width="4dp"
        app:civ_shadow="false"
        app:civ_shadow_color="#2CBCA3"
        app:civ_shadow_radius="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.084"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wcm"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="登入中請稍後....\n若此過程超過30秒\n請檢查您的網路連線是否正常\n或連繫客服人員"
            android:textSize="20sp" />

        <Button
            android:id="@+id/recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:minWidth="50dp"
            android:onClick="execute"
            android:text="近期\n報名"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button_pink"
            />

        <Button
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:onClick="execute"
            android:text="聯絡\n我們"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_button_pink"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/Intoshop"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="0.33"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:maxHeight="50px"
            android:onClick="execute"
            android:text="進入賣場"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp"
            android:layout_marginBottom="2.5dp"
            android:layout_weight="0.5"
            android:textColor="#FFFFFF"
            android:background="#2CBCA3"
            />

        <Button
            android:id="@+id/Enroll"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="0.33"
            android:layout_column="1"
            android:layout_columnWeight="0.5"
            android:maxHeight="50px"
            android:onClick="execute"
            android:text="活動報名"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp"
            android:layout_marginBottom="2.5dp"
            android:layout_weight="0.5"
            android:textColor="#FFFFFF"
            android:background="#2CBCA3"
            />

        <Button
            android:id="@+id/GetRedbag"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="0.1"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:onClick="execute"
            android:text="收紅包/簽到\n&amp;掃描兌換"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp"
            android:layout_marginBottom="2.5dp"
            android:layout_weight="0.5"
            android:textColor="#FFFFFF"
            android:background="#2CBCA3"
            />

        <Button
            android:id="@+id/SendRedbag"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="0.33"
            android:layout_column="1"
            android:layout_columnWeight="0.5"
            android:onClick="execute"
            android:text="送紅包"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp"
            android:layout_marginBottom="2.5dp"
            android:layout_weight="0.5"
            android:textColor="#FFFFFF"
            android:background="#2CBCA3"
            />

        <Button
            android:id="@+id/Record"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="0.33"
            android:layout_column="0"
            android:layout_columnWeight="0.5"
            android:onClick="execute"
            android:text="交易紀錄"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp"
            android:layout_marginBottom="2.5dp"
            android:layout_weight="0.5"
            android:textColor="#FFFFFF"
            android:background="#2CBCA3"/>

        <Button
            android:id="@+id/AlterMember"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="0.33"
            android:layout_column="1"
            android:layout_columnWeight="0.5"
            android:background="#2CBCA3"
            android:onClick="execute"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp"
            android:layout_marginBottom="2.5dp"
            android:layout_weight="0.5"
            android:textColor="#FFFFFF"
            android:text="會員中心" />
    </GridLayout>

</LinearLayout>